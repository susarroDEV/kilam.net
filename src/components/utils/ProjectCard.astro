---
import { projectCard } from "@/i18n/components/projectCard"
import type { Project } from "@/types/projectsTypes"

interface ProjectCardProps {
  project: Project
  position: "left" | "right"
  lang: "es" | "en" | "ca" | "eu" | "gl"
}

const { project, position, lang } = Astro.props as ProjectCardProps
const { id, name, texts, facts } = project
---

<article class={position}>
  <div class="timeline-dot" />
  <div class="timeline-card">
    <header>
      <h1>
        {name}
      </h1>
      <div class="card-facts">
        <span class="date">{facts.date}</span>
        <span class="badge">{facts.players}</span>
      </div>
    </header>
    <p>
      {texts.preview}
    </p>
    <a href={`/${lang}/projects/${id}`}>
      {projectCard[lang].anchor}
    </a>
  </div>
</article>

<style>
  article {
    position: relative;
    display: flex;
    align-items: center;
    color: #F0F0F0;
    width: 50%;
  }

  article.left {
    justify-content: flex-end;
  }

  article.right {
    justify-content: flex-start;
    margin-left: auto;
  }

  .timeline-dot {
    position: absolute;
    top: calc(50% - 10px);
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    border: 1.5px solid #DDD;
    box-shadow: 0 4px 10px #DDD4;
    transition: transform 0.3s ease , box-shadow 0.3s ease;
    overflow: hidden; 
    background-color: var(--color-contrast);
    transform-origin: center;
  }

  article.left .timeline-dot {
    right: -10px;
    left: auto;
  }

  article.right .timeline-dot {
    left: -10px;
    right: auto;
  }

  article:hover .timeline-dot {
    box-shadow: 0 0px 16px #DDD6;
    transform: scale(1.25);
  }

  .timeline-dot img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  .timeline-card {
    width: 90%;
    border-radius: .35rem;
    padding: 1.5rem;
    background: #001b1b;
    box-shadow: 0 10px 20px #001b1b;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border-left: 4px solid rgba(var(--color-contrast-rgb-value), 0.5);
  }

  article.left .timeline-card {
    margin-right: 3.5rem;
  }

  article.right .timeline-card {
    margin-left: 3.5rem;
    border-left: none;
    border-right: 4px solid rgba(var(--color-contrast-rgb-value), 0.5);
  }

  article.right .timeline-card {
    border-left: none;
    border-right: 4px solid rgba(var(--color-contrast-rgb-value), 0.5);
  }

  article:hover .timeline-card {
    transform: scale(1.03);
    box-shadow: 0 15px 30px #001b1b;
    border-color: rgba(var(--color-contrast-rgb-value), 1);
  }

  header {
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  h1 {
    color: var(--color-contrast);
    font-size: 1.5rem;
    font-weight: bold;
    margin: 0;
  }

  .card-facts {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .date {
    color: rgba(var(--color-contrast-rgb-value), 0.8);
    font-size: 0.85rem;
  }

  .badge {
    background: rgba(var(--color-contrast-rgb-value), 0.2);
    color: var(--color-contrast);
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  p {
    margin-bottom: 1rem;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  a {
    width: fit-content;
    display: flex;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: .35rem;
    font-size: 0.85rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    background: rgba(var(--color-contrast-rgb-value), 0.5);
    color: #111;
    font-weight: bold;
  }

  a:hover {
    background: rgba(var(--color-contrast-rgb-value), 1);
    transform: translateY(-2px);
  }

  @media (width < 1200px) {
    .timeline-card {
      width: 95%;
      padding: 1.25rem;
    }

    article.left .timeline-card {
      margin-right: 2.5rem;
    }

    article.right .timeline-card {
      margin-left: 2.5rem;
    }

    h1 {
      font-size: 1.35rem;
    }

    p {
      font-size: 0.9rem;
    }
  }

  @media (width < 992px) {
    article {
      width: 60%;
    }

    article.left {
      margin-right: 0;
    }

    article.right {
      margin-left: 0;
    }

    .timeline-card {
      width: 100%;
      padding: 1rem;
    }

    article.left .timeline-card {
      margin-right: 1.5rem;
    }

    article.right .timeline-card {
      margin-left: 1.5rem;
    }

    h1 {
      font-size: 1.25rem;
    }

    .date {
      font-size: 0.8rem;
    }

    .badge {
      font-size: 0.7rem;
      padding: 0.2rem 0.6rem;
    }

    p {
      font-size: 0.85rem;
      margin-bottom: 0.75rem;
    }

    a {
      font-size: 0.8rem;
      padding: 0.4rem 0.8rem;
    }
  }

  @media (width < 768px) {
    article {
      width: 100%;
    }

    article.left,
    article.right {
      justify-content: center;
      margin: 0;
    }

    .timeline-dot {
      display: none;
    }

    .timeline-card {
      width: 90%;
      margin: 0 auto !important;
      padding: 1.5rem 1.25rem;
      border-left: 4px solid rgba(var(--color-contrast-rgb-value), 0.5) !important;
      border-right: none !important;
    }

    header {
      margin-bottom: 1.25rem;
    }

    h1 {
      font-size: 1.4rem;
    }

    .card-facts {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .date {
      font-size: 0.85rem;
    }

    .badge {
      font-size: 0.75rem;
      padding: 0.25rem 0.75rem;
    }

    p {
      font-size: 0.95rem;
      margin-bottom: 1rem;
    }

    a {
      font-size: 0.85rem;
      padding: 0.5rem 1rem;
    }
  }

  @media (width < 480px) {
    .timeline-card {
      width: 95%;
      padding: 1.25rem 1rem;
    }

    h1 {
      font-size: 1.25rem;
    }

    .card-facts {
      gap: 0.35rem;
    }

    .date {
      font-size: 0.8rem;
    }

    .badge {
      font-size: 0.7rem;
      padding: 0.2rem 0.6rem;
    }

    p {
      font-size: 0.9rem;
      line-height: 1.4;
    }

    a {
      font-size: 0.8rem;
      padding: 0.45rem 0.9rem;
    }

    header {
      margin-bottom: 1rem;
    }
  }
</style>