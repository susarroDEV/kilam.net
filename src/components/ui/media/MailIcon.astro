---
import { getIconDims } from "@/utils/getIconDims"

let scheme = Astro.props.scheme || 'light'
let color = scheme === 'light' ? '#DDD' : '#111'
if (scheme === 'member') {
  color = "rgba(var(--color-primary-rgb-value), 0.9)"
}
if (scheme === 'contact') {
  color = "rgba(var(--color-quinary-rgb-value), 0.9)"
}
let size = Astro.props.size || 'md'
let dimensions = getIconDims(size)
---

<svg 
  xmlns="http://www.w3.org/2000/svg" 
  width={dimensions} 
  height={dimensions} 
  viewBox="0 0 24 24" 
  fill="none" 
  stroke={color} 
  stroke-width="2" 
  stroke-linecap="round" 
  stroke-linejoin="round"
>
  <rect width="20" height="16" x="2" y="4" rx="2" />
  <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
</svg>
